
<!-- Display article errors  -->
<% if @article.errors.any? %>
<h2>The following errors prevented the article from getting created</h2>
<ul>
<% @article.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
<% end %>
</ul>
<% end %>

<!-- Form for create new article  -->
<%= form_for @article do |f| %>
<%= f.label :title, "Title input" %><br/>
<%= f.text_field :title %><br/>
<%= f.label :description, "Description input" %><br/>
<%= f.text_area :description , size: "60x12" %><br/>
<%= f.submit %><br/>
<% end %>
<%= link_to "Back to articles listing", articles_path %>
