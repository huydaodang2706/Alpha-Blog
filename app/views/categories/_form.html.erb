<!-- Display category errors  -->
<%= render 'share/errors', obj: @category%>
<!-- Form for category new user  -->
<div class="row">
  <%= form_for @category do |f| %>
    <div class="form-group row">
      <div class="control-label col-sm-3">
        <%= f.label :name, "Category name",class:"fit-right" %></br>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :name, size: "90x1" ,class: "form-control",placeholder: "Enter an category name", autofocus: true %><br/>
      </div>
    </div>
    <div class="form-group row">
      <div class="col-sm-3"></div>
      <div class="col-sm-3">
          <%= f.submit class:"btn btn-primary btn-lg"%><br/>
      </div>
      [<%= link_to "Cancel request and return to articles listing", articles_path %>]
      </div>
  <% end %>
</div>
