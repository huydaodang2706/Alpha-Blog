<h1 align="center" style="font-weight: bold">Log in</h1></br>
<div class="row">

    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-group row">
        <div class="control-label col-sm-4">
          <%= f.label :email, "Email", class: "fit-right" %>
        </div>
        <div class="col-sm-8">
          <%= f.email_field :email, size: "90x1"  ,class:"form-control",placeholder:"Enter an email" %><br/>
        </div>
      </div>
      <div class="form-group row">
        <div class="control-label col-sm-4">
          <%= f.label :password, "Password", class: "fit-right" %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password ,class:"form-control",placeholder: "Enter password", autocomplete: "off" %><br/>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4"></div>
        <div class="col-sm-3">
            <%= f.submit "Log in", class:"btn btn-primary btn-lg"%><br/>
        </div>
        [<%= link_to "Cancel request and return to articles listing", articles_path %>]
        </div>

    <% end %>


</div>
